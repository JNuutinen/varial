  "module": "dist/varial.esm.js",
  "size-limit": [
    {
      "path": "dist/varial.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/varial.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
